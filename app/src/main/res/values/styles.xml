<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        </style>

    <style name="ActionBarStyle" parent="style/Widget.AppCompat.ActionBar">
        <item name="background">@color/colorBlack</item>
        <!--<item name="android:displayOptions">showHome|useLogo</item>-->
        <item name="displayOptions">none</item>
    </style>

    <style name="TitleTextViewStyle" parent="@android:style/Widget.TextView" >
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="LargeButtonStyle" parent="@android:style/Widget.TextView" >
        <item name="android:background">@color/colorMainBtnRed</item>
        <item name="android:layout_margin">@dimen/large_button_margin</item>
        <item name="android:height">@dimen/large_button_height</item>
        <item name="android:textSize">@dimen/large_button_text_size</item>
    </style>

    <style name="SubTitleTextViewStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
    </style>

</resources>
